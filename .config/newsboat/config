auto-reload yes
browser "setsid -f xdg-open %u"
macro m set browser "setsid -f mpv --really-quiet --no-terminal"; open-in-browser; set browser "xdg-open %u"
macro n set browser "setsid -f echo >> ~/.local/share/newsboat/todo.txt"; open-in-browser; set browser "xdg-open %u"
macro x set browser "setsid -f echo >> ~/.local/bin/yt-dl/yt_playlist.txt"; open-in-browser; set browser "xdg-open %u"
reload-threads 5
show-read-feeds no 
text-width 80

# vim binds
bind-key h quit
bind-key BACKSPACE quit
bind-key j down
bind-key k up
bind-key l open
bind-key H prev-feed
bind-key L next-feed
bind-key . toggle-show-read-feeds

