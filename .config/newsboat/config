auto-reload yes
browser "setsid -f $BROWSER %u"
cleanup-on-quit yes
macro m set browser "setsid -f mpv --really-quiet --no-terminal"; open-in-browser; set browser "$BROWSER %u"
macro n set browser "setsid -f echo >> ~/.local/share/newsboat/todo.txt"; open-in-browser; set browser "$BROWSER %u"
macro x set browser "setsid -f echo >> ~/.local/bin/yt-dl/yt_playlist.txt"; open-in-browser; set browser "$BROWSER %u"
macro . set browser "setsid -f wl-copy"; open-in-browser; set browser "$BROWSER %u"
reload-threads 10
show-read-feeds no 
text-width 80

# vim binds
bind-key h quit
bind-key BACKSPACE quit
bind-key j down
bind-key k up
bind-key l open
bind-key H prev-feed
bind-key L next-feed
bind-key . toggle-show-read-feeds

include /usr/share/doc/newsboat/contrib/colorschemes/solarized-dark
