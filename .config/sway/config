## variables
set $font Product Sans Regular
set $menu wofi -S drun
set $laptop eDP-1
set $left h
set $down j
set $up k
set $right l
set $mod Mod4
set $term foot
set $wm ~/.local/bin/wm
exec $wm/iplink
xwayland disable

## shortcuts
bindsym $mod+Alt+a exec systemctl suspend
bindsym $mod+Alt+d exec systemctl reboot
bindsym $mod+Alt+e exec thunar
bindsym $mod+Alt+f exec org.mozilla.firefox
bindsym $mod+Alt+s exec systemctl poweroff
bindsym $mod+F2 exec $wm/ncmpv
bindsym $mod+F3 exec $wm/emdash
bindsym $mod+F4 exec $wm/ytmpv 
bindsym $mod+F5 exec $wm/arceopaste 
bindsym $mod+Q kill
bindsym $mod+Return exec $term
bindsym $mod+d exec $menu
bindsym $mod+Print exec $wm/screenshotc
bindsym Print exec $wm/screenshot
bindsym Shift+Print exec $wm/screenshotp
floating_modifier $mod normal

## appearance
default_border pixel 1
font pango:$font 8
gaps inner 2
gaps outer 2
hide_edge_borders smart
smart_borders on
smart_gaps on
output * bg ~/.local/share/backgrounds/woods.jpeg stretch

## window rules
for_window [app_id="mpv"] floating enable; inhibit_idle visible; border none; max_render_time off
for_window [app_id="org.gnome.Calculator"] floating enable
for_window [app_id="org.mozilla.firefox" title="Firefox â€” Sharing Indicator"] kill
for_window [app_id="org.mozilla.firefox" title="^Picture-in-Picture$"] floating enable
for_window [app_id="thunar" title="^Rename$"] floating enable
for_window [shell="xwayland"] title_format "%title [XWayland]"

## buttons
bindsym --locked XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym --locked XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym --locked XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym --locked XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym --locked XF86MonBrightnessDown exec brightnessctl set 10%-
bindsym --locked XF86MonBrightnessUp exec brightnessctl set 10%+
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPrev exec playerctl previous

## input configuration
input "1267:91:Elan_Touchpad" {
       accel_profile adaptive
       dwt disabled
       tap enabled
}

## moving around
bindsym $mod+$down focus down
bindsym $mod+$left focus left
bindsym $mod+$right focus right
bindsym $mod+$up focus up
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+space floating toggle
bindsym $mod+a exec swaymsg "output $laptop dpms toggle"
bindsym $mod+b splith
bindsym $mod+e layout toggle split
bindsym $mod+f fullscreen
bindsym $mod+r mode "resize"
bindsym $mod+v splitv
bindsym $mod+w layout tabbed

mode "resize" {
    bindsym $left resize shrink width 20px
    bindsym $down resize grow height 20px
    bindsym $up resize shrink height 20px
    bindsym $right resize grow width 20px
    bindsym Return mode "default:
    bindsym Escape mode "default"
}

bar {
    position bottom
    status_command while $wm/status; do sleep 1; done
    colors {
 	statusline #ffffff
	background #000000
	inactive_workspace #000000 #000000 #ffffff
    }
}

include /etc/sway/config.d/*

