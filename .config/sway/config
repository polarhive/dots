# startup
exec foot -s
xwayland disable

# variables
set $mod Mod4
set $up k
set $down j
set $left h
set $right l
set $bin ~/.local/bin
set $term footclient
set $laptop eDP-1
set $monitor HDMI-A-1
set $font Product Sans Regular

## gestures
bindgesture swipe:up floating disable
bindgesture swipe:down floating enable
bindgesture swipe:right workspace prev
bindgesture swipe:left workspace next

## appearance
font pango:$font 8
output * bg ~/.local/share/backgrounds/waves.png stretch
default_border pixel 1
gaps inner 0
gaps outer 0
hide_edge_borders smart

## swayfx-tweaks
shadows on
corner_radius 2
smart_corner_radius on
shadow_blur_radius 20
default_dim_inactive 0.10

## window rules
for_window [urgent=latest] focus
for_window [app_id=".*"] inhibit_idle fullscreen
for_window [app_id="^.*"] inhibit_idle fullscreen
for_window [app_id="firefox" title="Firefox â€” Sharing Indicator"] kill
for_window [app_id="firefox" title="^Picture-in-Picture$"] floating enable
for_window [app_id="mpv"] inhibit_idle visible; border none; max_render_time off
for_window [app_id="org.telegram.desktop" title="^TelegramDesktop$"] floating enable
for_window [app_id="thunar" title="^Rename$"] floating enable
for_window [class=".*"] inhibit_idle fullscreen
for_window [class="^.*"] inhibit_idle fullscreen
for_window [shell="xwayland"] title_format "%title [XWayland]"

## buttons
bindsym $mod+Return exec $term
bindsym $mod+space floating toggle
bindsym $mod+Alt+d exec systemctl reboot
bindsym $mod+Alt+a exec systemctl suspend
bindsym $mod+Alt+s exec systemctl poweroff
bindsym $mod+Alt+e exec thunar
bindsym $mod+Alt+l exec swaylock -f
bindsym $mod+Alt+f exec $BROWSER
bindsym $mod+a exec swaymsg "output $laptop dpms toggle"
bindsym $mod+m exec $bin/yt-dl/ytp
bindsym $mod+d exec wofi -S drun
bindsym $mod+b splitv
bindsym $mod+v splith
bindsym $mod+q kill
bindsym $mod+f fullscreen
bindsym $mod+r mode "resize"
bindsym $mod+w layout tabbed
bindsym $mod+e layout splith
bindsym $mod+XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ 100%
bindsym $mod+XF86AudioPlay exec notify-send "$(mpc current)"
bindsym Shift+XF86AudioPlay exec $bin/shortcuts/music
bindsym Shift+Print exec $bin/screenshots/screenshotp
bindsym Print exec $bin/screenshots/screenshot
floating_modifier $mod normal

## hardware
bindsym --locked XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym --locked XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym --locked XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym --locked XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym --locked XF86AudioPlay exec playerctl play-pause
bindsym --locked XF86AudioNext exec playerctl next
bindsym --locked XF86AudioPrev exec playerctl previous
bindsym --locked XF86MonBrightnessUp exec brightnessctl set 10%+
bindsym --locked XF86MonBrightnessDown exec brightnessctl set 10%-
bindswitch --reload --locked lid:on output $laptop disable
bindswitch --reload --locked lid:off output $laptop enable
input "1267:91:Elan_Touchpad" {
       accel_profile adaptive
       dwt disabled
       tap enabled
}

## moving around
bindsym $mod+$up focus up
bindsym $mod+$down focus down
bindsym $mod+$left focus left
bindsym $mod+$right focus right
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
mode "resize" {
    bindsym $left resize shrink width 25px
    bindsym $down resize grow height 45px
    bindsym $up resize shrink height 25px
    bindsym $right resize grow width 45px
    bindsym $mod+r mode default
}

## swaybar
bar {
    position bottom
    status_command while $bin/shortcuts/status; do sleep 60; done
    height 0
    colors {
	background #000000
	inactive_workspace #000000 #000000 #ffffff
    }
}
include /etc/sway/config.d/*
